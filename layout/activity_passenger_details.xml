<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dhan10"
    tools:context=".PassengerDetails"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:layout_x="23dp"
        android:layout_y="198dp"
        android:text="Name"
        android:textColor="@android:color/background_dark"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="521dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_x="210dp"
        android:layout_y="201dp"
        android:ems="10"
        android:hint="@string/MainPassengerName"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="148dp"
        android:layout_height="112dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="8dp"
        android:layout_x="29dp"
        android:layout_y="385dp"
        android:text="MobileNumber"
        android:textColor="@android:color/background_dark"
        android:textSize="40dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editText5"
        app:layout_constraintEnd_toStartOf="@+id/editText5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="382dp"
        android:layout_height="98dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="146dp"
        android:layout_x="216dp"
        android:layout_y="390dp"
        android:ems="10"
        android:hint="@string/EnterMobileNumber"
        android:inputType="textPersonName"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="151dp"
        android:layout_height="79dp"
        android:layout_marginBottom="108dp"
        android:layout_x="196dp"
        android:layout_y="627dp"
        android:background="@drawable/rounded_edge"
        android:onClick="passclick"
        android:text="Go"
        android:textColor="@android:color/background_light"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</AbsoluteLayout>